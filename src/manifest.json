{

    "manifest_version": 2,
    "name": "bilibili jimaku filter",
    "version": "0.7.2",
  
    "description": "bilibili jimaku filter by ericlam",
    "author": "Eric Lam",
    "developer": {
      "name": "Eric Lam",
      "url": "https://github.com/eric2788/bilibili-jimaku-filter"
    },
    "icons": {
      "96": "icons/icon.png"
    },

    "applications": {
      "gecko": {
        "id": "{041b8202-e9d4-4a78-a9da-465c749ed26c}",
        "update_url": "https://eric2788.github.io/bilibili-jimaku-filter/updates.json",
        "strict_min_version": "78.0"
      }
    },

    "permissions": [
        "webRequest",
        "*://vup.darkflame.ga/*",
        "*://api.live.bilibili.com/*",
        "*://live.bilibili.com/*",
        "notifications",
        "storage",
        "tabs"
    ],

    "content_scripts": [
      {
        "matches": ["*://live.bilibili.com/*"],
        "js": [
          "browser-polyfill.js",
          "cdn/jquery.js",
          "cdn/jquery-ui.min.js",
          "index.js"
        ],
        "css": [
          "cdn/jquery-ui.min.css"
        ]
      }
    ],

    "web_accessible_resources": [
      "cdn/blive-proxy.js",
      "cdn/pako.min.js"
    ],

    "content_security_policy": "script-src 'self' https://stackpath.bootstrapcdn.com; object-src 'self'",

    "background":{
      "scripts": [
        "browser-polyfill.js",
        "background.js"
      ]
    },

    "browser_action": {
        "browser_style": true,
        "default_icon": {
          "40": "icons/icon.png"
        },
        "default_title": "前往字幕設定"
      }
  
  }