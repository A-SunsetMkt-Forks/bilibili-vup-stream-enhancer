{

    "manifest_version": 2,
    "name": "bilibili jimaku filter",
    "version": "0.0.2",
  
    "description": "bilibili jimaku filter by ericlam",
    "author": "Eric Lam",
    "developer": {
      "name": "Eric Lam",
      "url": "https://github.com/eric2788"
    },
    "icons": {
      "96": "icons/icon.png"
    },

    "applications": {
      "gecko": {
        "id": "{041b8202-e9d4-4a78-a9da-465c749ed26c}",
        "strict_min_version": "42.0"
      }
    },

    "permissions": [
        "webRequest",
        "*://vup.darkflame.ga/*",
        "notifications",
        "storage"
    ],

    "content_scripts": [
      {
        "matches": ["*://live.bilibili.com/*"],
        "js": [
          "browser-polyfill.js",
          "cdn/jquery.js",
          "cdn/jquery-ui.min.js",
          "index.js"
        ],
        "css": [
          "cdn/jquery-ui.min.css"
        ]
      }
    ],

    "background":{
      "page": "background.html"
    },

    "browser_action": {
        "browser_style": true,
        "default_icon": {
          "40": "icons/icon.png"
        },
        "default_title": "前往設定"
      }
  
  }